#!/bin/sh

set -e

BUILD_DIR=$1
CACHE_DIR=$2

# config
VERSION="1.5.0"
FILENAME="phantomjs-${VERSION}-linux-x86_64-dynamic.tar.gz"
PHANTOMJS_PACKAGE="https://phantomjs.googlecode.com/files/${FILENAME}"

mkdir -p $CACHE_DIR
if ! [ -e $CACHE_DIR/$FILE_NAME ]; then
  echo "-----> Fetching PhantomJS ${VERSION} binaries at ${PHANTOMJS_PACKAGE}"
  curl $PHANTOMJS_PACKAGE -s -o $CACHE_DIR/$FILE_NAME
fi

echo "-----> Extracting PhantomJS ${VERSION} binaries to ${BUILD_DIR}/vendor/phantomjs"
mkdir -p $BUILD_DIR/vendor/phantomjs
tar zxf $CACHE_DIR/$FILE_NAME -C $BUILD_DIR/vendor/phantomjs
