#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

set -e

# config
VERSION="1.0.0"
S3_BUCKET="stomita-buildpack-phantomjs"

BUILD_DIR=$1
CACHE_DIR=$2

# s3 packages
BUILDPACK_PHANTOMJS_PACKAGE="http://${S3_BUCKET}.s3.amazonaws.com/buildpack-phantomjs-${VERSION}.tar.gz"

echo "-----> Fetching phantomJS buildpack binaries"
curl $BUILDPACK_PHANTOMJS_PACKAGE -s -o - | tar zxf - -C $BUILD_DIR

